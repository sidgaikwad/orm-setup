{
  "name": "@sidgaikwad/orm-setup",
  "version": "1.0.0",
  "description": "Interactive CLI for setting up ORMs (Prisma, Drizzle) with best practices and starter schemas",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "orm-setup": "./bin/cli.js",
    "setup-orm": "./bin/cli.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node && tsc --emitDeclarationOnly",
    "build:types": "tsc --emitDeclarationOnly",
    "prepublishOnly": "bun run build",
    "dev": "bun run src/index.ts",
    "test": "bun test"
  },
  "keywords": [
    "orm",
    "prisma",
    "drizzle",
    "kysely",
    "database",
    "setup",
    "cli",
    "typescript",
    "postgresql",
    "mysql",
    "sqlite",
    "schema",
    "migration",
    "nextjs",
    "remix",
    "sveltekit"
  ],
  "author": "Siddharth Gaikwad <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidgaikwad/orm-setup.git"
  },
  "bugs": {
    "url": "https://github.com/sidgaikwad/orm-setup/issues"
  },
  "homepage": "https://github.com/sidgaikwad/orm-setup#readme",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^6.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "bun-types": "latest"
  }
}