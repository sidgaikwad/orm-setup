{
  "name": "@sidgaikwad/orm-setup",
  "version": "1.0.0",
  "description": "Framework-agnostic CLI for setting up Drizzle ORM with best practices",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "orm-setup": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --minify && tsc --emitDeclarationOnly",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "orm",
    "drizzle",
    "database",
    "cli",
    "setup",
    "postgresql",
    "mysql",
    "sqlite",
    "typescript",
    "bun"
  ],
  "author": "Siddharth Gaikwad",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "chalk": "^5.3.0",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
